<h3>Hello <%= @game.name %> !</h3>
<form class="form-inline">
  <div class="form-group">
    <input name="code" type="text" class="form-control" placeholder="Enter code">
  </div>
  <button type="submit" class="btn btn-default">Send</button>
</form>
<div class="error"><%= @game.error %></div>

<% if @game.result == 'won' || @game.result == 'lose' %>
    <% text = @game.result == 'won' ? 'You won !!!' : 'You lose !!! Code was: ' + @game.secret_code %>

    <div class="modal fade" tabindex="-1" role="dialog" id="game_over_modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title"><%= text %></h4>
          </div>
          <div class="modal-body">
            <p>Do you want to start a new game ?</p>
          </div>
          <div class="modal-footer">
            <a href="/start?reset=true" class="btn btn-default">Yes</a>
            <a href="/?reset=true" class="btn btn-primary">No</a>
          </div>
        </div>
      </div>
    </div>

<% else %>
    <div class="result"><%= @game.result %></div>
    <div class="hint">
      <button type="button" class="btn btn-info">Hint</button>
      <p><%= @game.hints %></p>
    </div>
<% end %>
